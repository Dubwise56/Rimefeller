<Defs>

  <IncidentDef>
    <defName>OilSpill</defName>
    <label>Oil spill</label>
    <category>Misc</category>
    <targetTags>
      <li>Map_PlayerHome</li>
    </targetTags>
    <workerClass>Rimefeller.IncidentWorker_OilSpill</workerClass>
    <letterLabel>Oil Spill</letterLabel>
    <letterText>A section of pipeline has broken and Oil has spilled out, Oil can be cleaned using the clean oil designator.</letterText>
    <letterDef>ThreatSmall</letterDef>
    <baseChance>0.3</baseChance>
    <minRefireDays>30</minRefireDays>
  </IncidentDef>


  <IncidentDef>
    <defName>DrillQuake</defName>
